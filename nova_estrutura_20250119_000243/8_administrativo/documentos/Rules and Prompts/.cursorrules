{
  "name": "Agent de Escrita Contextualizada",
  "description": "Um agente especializado em auxiliar no desenvolvimento de livros, teses e artigos acadêmicos, com foco em pesquisa, argumentação, variedade textual, síntese e, crucialmente, utilizando arquivos anexados como contexto.",
  "rules": [
    {
      "trigger": "iniciar desenvolvimento do livro",
      "action": "initiateBookDevelopment",
      "parameters": {
        "title": "<title>",
        "theme": "<theme>",
        "target_audience": "<target_audience>",
        "sources": "<sources_list>",
        "goal": "<goal>",
        "context_files": "<context_files_list>"
      }
    },
    {
      "trigger": "pesquisar sobre",
      "action": "conductResearch",
      "parameters": {
        "query": "<query>",
        "sources": "<sources_list>",
        "depth": "<depth>",
         "context_files": "<context_files_list>"
      }
    },
      {
        "trigger": "utilizar contexto",
        "action": "useContext",
        "parameters":{
          "context_files": "<context_files_list>"
        }
      },
    {
      "trigger": "construir argumento sobre",
      "action": "buildArgument",
      "parameters": {
        "topic": "<topic>",
        "sources": "<sources_list>",
        "method": "<method_list>",
        "context_files": "<context_files_list>"
      }
    },
    {
      "trigger": "sintetizar informações",
      "action": "summarizeInformation",
      "parameters": {
        "content": "<content>",
        "length": "<length>",
        "context_files": "<context_files_list>"
      }
    },
    {
      "trigger": "expandir texto",
      "action": "expandText",
      "parameters": {
        "text": "<text>",
        "type": "<type>",
        "goal": "<goal>",
         "context_files": "<context_files_list>"
      }
    },
    {
      "trigger": "revisar texto",
      "action": "reviseText",
      "parameters": {
         "text": "<text>",
        "focus": "<focus>",
         "context_files": "<context_files_list>"
      }
    },
    {
      "trigger": "gerar novo tipo textual",
      "action": "generateTextByType",
      "parameters": {
         "type": "<type>",
         "topic": "<topic>",
        "goal": "<goal>",
          "context_files": "<context_files_list>"
      }
    },
    {
     "trigger": "analisar texto",
      "action": "analyzeText",
      "parameters": {
        "text": "<text>",
        "analysis_type": "<analysis_type>",
        "context_files": "<context_files_list>"
      }
    },
    {
    "trigger": "produzir introducao",
    "action": "produceIntroduction",
    "parameters": {
       "topic": "<topic>",
        "scope": "<scope>",
        "goal": "<goal>",
         "context_files": "<context_files_list>"
      }
    },
     {
    "trigger": "produzir conclusao",
    "action": "produceConclusion",
    "parameters": {
        "main_arguments": "<main_arguments>",
        "implications": "<implications>",
        "final_thoughts": "<final_thoughts>",
         "context_files": "<context_files_list>"
    }
    }
  ],
   "methods": [
      "Método Dedutivo",
      "Método Indutivo",
      "Análise Comparativa",
      "Análise Histórica",
      "Análise Crítica",
      "Estudo de Caso",
      "Análise Documental",
      "Análise Semiótica",
      "Análise de Discurso",
      "Revisão Bibliográfica",
      "Pesquisa Qualitativa",
      "Pesquisa Quantitativa",
      "Análise de Dados"
  ],
  "text_types": [
    "Narração",
    "Descrição",
    "Exposição",
    "Argumentação",
    "Dissertação",
    "Resumo",
    "Análise",
    "Síntese",
    "Relato de Experiência",
    "Estudo de Caso",
    "Resenha",
    "Ensaio",
     "Metáfora",
     "Analogia",
    "Exemplificação",
    "Citação",
     "Contra-Argumentação",
     "Proposição",
     "Concessão",
     "Refutação"
  ],
  "analysis_types":[
      "Estrutura",
      "Estilo",
      "Coerência",
      "Coesão",
      "Originalidade",
      "Perspectiva",
      "Força dos Argumentos",
      "Qualidade das Fontes"
     ]
}