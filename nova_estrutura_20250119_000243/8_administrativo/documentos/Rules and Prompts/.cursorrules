      {
          "trigger": "iniciar desenvolvimento do livro",
          "action": "initiateBookDevelopment",
          "difficulty": "media",
           "return": {
             "type":"passo_a_passo_e_tokens",
             "previsao_tokens": 150,
            "passo_a_passo": [
                "Coletarei as informações para iniciar o desenvolvimento do livro.",
                "Definirei o título e o tema do livro.",
                "Definirei o público-alvo do livro.",
                 "Definirei as fontes que serão utilizadas no desenvolvimento do livro",
                  "Definirei o objetivo geral do livro"
              ]
           },
          "parameters": {
              "title": "<title>",
              "theme": "<theme>",
              "target_audience": "<target_audience>",
              "sources": "<sources_list>",
              "goal": "<goal>",
               "context_files": "<context_files_list>"
          }
      },
      {
          "trigger": "pesquisar sobre",
          "action": "conductResearch",
           "difficulty": "media",
